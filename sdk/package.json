{
  "name": "@backchain/monorepo",
  "private": true,
  "version": "0.2.0",
  "description": "Backchain SDK â€” Modular packages for the Backchain DeFi ecosystem",
  "workspaces": [
    "packages/core",
    "packages/staking",
    "packages/nft",
    "packages/fusion",
    "packages/fortune",
    "packages/notary",
    "packages/agora",
    "packages/charity",
    "packages/rental",
    "packages/swap",
    "packages/buyback",
    "packages/events",
    "packages/indexer",
    "packages/api",
    "packages/sdk",
    "packages/cli"
  ],
  "scripts": {
    "build:core": "cd packages/core && npm run build",
    "build:events": "cd packages/events && npm run build",
    "build:modules": "npm run build --workspace=packages/staking --workspace=packages/nft --workspace=packages/fusion --workspace=packages/fortune --workspace=packages/notary --workspace=packages/agora --workspace=packages/charity --workspace=packages/rental --workspace=packages/swap --workspace=packages/buyback",
    "build:indexer": "cd packages/indexer && npm run build",
    "build:api": "cd packages/api && npm run build",
    "build:sdk": "cd packages/sdk && npm run build",
    "build:all": "npm run build:core && npm run build:events && npm run build:modules && npm run build:indexer && npm run build:api && npm run build:sdk",
    "clean": "npm run clean --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/backcoin-org/backchain-dapp.git",
    "directory": "sdk"
  }
}
